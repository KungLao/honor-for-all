{
    "$schema": "http://json-schema.org/draft-03/schema#",
    "title": "Spell",
    "description": "Schema for defining hero spell",
    "type": "object",
    "properties": {
        "id": {
            "description": "Unique spell id",
            "type": "integer"
        },
        "name": {
            "description": "Spell name",
            "type": "string"
        },
        "description": {
            "description": "Spell description",
            "type": "string"
        },
        "order": {
            "description": "Spell sort order",
            "type": "integer"
        },
        "imgUri": {
            "description": "Image URI",
            "type": "string"
        }
    }
}
